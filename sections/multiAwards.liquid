            <img src="{{section.settings.Himage| img_url: "1000x"}}" 
                  srcset="{%- if section.settings.Himage.width >= 275 -%}{{ section.settings.Himage | img_url: '275x' }} 275w,{%- endif -%}
                  {%- if section.settings.Himage.width >= 550 -%}{{ section.settings.Himage | img_url: '550x' }} 550w,{%- endif -%}
                  {%- if section.settings.Himage.width >= 710 -%}{{ section.settings.Himage | img_url: '710x' }} 710w,{%- endif -%}
                  {%- if section.settings.Himage.width >= 1420 -%}{{ section.settings.Himage | img_url: '1420x' }} 1420w,{%- endif -%} 
                  {{ section.settings.Himage | img_url: 'master' }} {{ section.settings.Himage.width }}w""
                  style="max-width: 900px; margin: auto;"
            />
      </div>
      <div style="display: flex; justify-content: space-around; align-items: center;">

        <slideshow-component class="slider-mobile-gutter joi-slider" >
          <div class="button-div">
            <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'ArrowLeft' %}</button>
  
          </div>
            <ul id="Slider-{{ section.id }}" 
                class="multicolumn-list grid grid--1-col grid--4-col-desktop slider slider--mobile slider-mobile-gutter joi-slider-middle" 
                
                role="list"
              >
              {%- for block in section.blocks -%}
              <li id="Slide-{{ section.id }}-{{ forloop.index }}" 
                  class=" grid__item slider__slide  center" 
                  
              >
                <div class="joi-card-container">

                  <div class="joi-card-background ">
                    <img  
                      src="{{ block.settings.image | img_url: '225x' }}"
                      srcset="{%- if settings.image.width >= 275 -%}{{ settings.image.width | img_url: '275x' }} 275w,{%- endif -%}
                      {%- if settings.image.width >= 550 -%}{{ settings.image.width | img_url: '550x' }} 550w,{%- endif -%}
                      {%- if settings.image.width >= 710 -%}{{ settings.image.width | img_url: '710x' }} 710w,{%- endif -%}
                      {%- if settings.image.width >= 1420 -%}{{ settings.image.width | img_url: '1420x' }} 1420w,{%- endif -%} 
                      {{ settings.image.width| img_url: 'master' }} {{ settings.image.width }}w"
                      style="z-index: 1;"
                    />
                  </div>
                  <div class="joi-card-content">
                    {%- if block.settings.title != blank -%}
                      <h2>
                        {{ block.settings.title  }}
                      </h2>
                    {%- endif -%}
                    {%- if block.settings.type != blank -%}
                      <h4>
                        {{ block.settings.type }}
                      </h4>
                    {%- endif -%}
                    {%- if block.settings.discription != blank -%}
                      <p>  {{ block.settings.discription  }}
                      </p>
                    {%- endif -%}
                    {%- if block.settings.author != blank -%}
                      <h4>
                        {{ block.settings.author  }}
                      </h4>
                    {%- endif -%}
        
                  </div>
                </div>
              </li>
              {%- endfor -%}
            </ul>
            <div class="button-div" >
              <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'ArrowRight' %}</button>
            </div>
          </slideshow-component>
          <!-- <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button> -->
        </div>
        <!-- <div class="slider-buttons no-js-hidden medium-hide{% if section.blocks.size < 2 %} small-hide{% endif %}">
